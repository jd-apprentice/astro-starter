---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, TWITTER, GITHUB, LINKEDIN } from "../config";
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href={TWITTER} target="_blank">Twitter</HeaderLink>
		<HeaderLink href={GITHUB} target="_blank">GitHub</HeaderLink>
		<HeaderLink href={LINKEDIN} target="_blank">Linkedin</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
		text-align: center;
	}
	nav {
		text-align: center;
	}
</style>
